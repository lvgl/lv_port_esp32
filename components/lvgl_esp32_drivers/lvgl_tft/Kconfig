            select LV_TFT_DISPLAY_PROTOCOL_SPI
            select LV_TFT_DISPLAY_MONOCHROME
        config LV_TFT_DISPLAY_USER_CONTROLLER_RA8875
            bool "RA8875"
            select LV_TFT_DISPLAY_CONTROLLER_RA8875
            select LV_TFT_DISPLAY_PROTOCOL_SPI
    endchoice

